/* pages/points/points.wxss */
.points-container {
  min-height: 100vh;
  background: #E3FFCC;
  padding: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #ffffff;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 主要内容 */
.content {
  padding-bottom: 40rpx;
}

/* 积分概览卡片 - 优化设计 */
.points-overview {
  background: linear-gradient(135deg, #81C784 0%, #66BB6A 100%);
  border-radius: 20rpx;
  padding: 42rpx;
  margin: 0 24rpx 24rpx 24rpx;
  box-shadow: 0 8rpx 42rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.user-card {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.user-left {
  display: flex;
  align-items: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-type {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.level-info {
  margin-bottom: 8rpx;
}

.level-badge {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.points-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx; /* 向左移动 */
}

.env-title {
  font-size: 28rpx; /* 与微信用户字体大小一致 */
  color: #ffffff;
  margin-bottom: 10rpx;
}

.mascot-direct {
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  bottom: 40rpx;
  right: 50rpx;
}

.points-display {
  text-align: left;
  margin-left: 100rpx; /* 与用户头像和信息对齐 */
}

.points-label {
  font-size: 28rpx;
  color: #ffffff;
  display: block;
  margin-bottom: 10rpx;
}

.points-value {
  font-size: 72rpx;
  font-weight: bold;
  color: #ffffff;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666666;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #eeeeee;
}

/* 每日任务 - 优化设计 */
.daily-tasks {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 0 24rpx 24rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #E0E0E0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.task-progress {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 500;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  border: 2rpx solid #E0E0E0;
}

.task-item.completed {
  background: #e8f5e8;
  border-left-color: #4CAF50;
}

.task-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.task-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  background: #adccaeff;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
  flex-shrink: 0;
}

.task-icon-img {
  width: 144rpx;
  height: 144rpx;
}

.task-icon-text {
  color: rgba(255, 255, 255, 0.7);
  font-size: 48rpx;
  font-weight: bold;
}

.task-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 8rpx;
}

.task-name, .task-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

.task-desc {
  font-size: 24rpx;
  color: #666666;
}

.task-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.task-reward {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
}

.task-status-btn {
  background: #ff9800;
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.task-status-btn.completed {
  background: #e0e0e0;
  color: #666666;
}



.task-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.task-item:last-child {
  border-bottom: none;
}

.task-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.browse-icon {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.video-icon {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.share-icon {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.task-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.task-btn {
  background: #FFA726;
  color: white;
  border: none;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 30rpx;
  font-weight: 900;
  white-space: nowrap;
  margin-left: 24rpx;
}

.task-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 16rpx rgba(255, 193, 7, 0.25);
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.task-status.completed {
  background: #e8f5e8;
  color: #52c41a;
}

.task-status.pending {
  background: #fff7e6;
  color: #fa8c16;
}

.task-status:not(.completed):not(.pending) {
  background: #f0f0f0;
  color: #666666;
}

/* 积分记录 */
.points-records {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.empty-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  background: #f5f5f5;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999999;
}

.records-list {
  display: flex;
  flex-direction: column;
}

.record-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 6rpx;
}

.record-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 6rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999999;
}

.record-points {
  font-size: 32rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.record-points.positive {
  color: #52c41a;
  background: #e8f5e8;
}

.record-points.negative {
  color: #ff4d4f;
  background: #fff1f0;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  color: #667eea;
  font-size: 28rpx;
}

.loading-more {
  display: flex;
  align-items: center;
}

.loading-more text {
  margin-left: 10rpx;
}

.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* 底部功能模块样式 */
.bottom-modules {
  display: flex;
  gap: 24rpx;
  margin: 0 24rpx 24rpx 24rpx;
}

.module-card {
  flex: 1;
  background: linear-gradient(135deg, #26A69A 0%, #00BCD4 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(38, 166, 154, 0.25);
  transition: all 0.3s ease;
}

.lottery-module {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.25);
}

.module-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(38, 166, 154, 0.3);
}

.lottery-module:active {
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.module-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.module-content {
  flex: 1;
}

.module-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 6rpx;
}

.module-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.module-arrow {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: bold;
}