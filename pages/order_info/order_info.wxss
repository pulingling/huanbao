Page{
  background:rgba(239,239,244,1);
}
.line{
  background: #f6f6f6;
  width: 100%;
  height: 30rpx;
}
.orderInfo{
  background: #fff;
  margin: 30rpx auto 0;
  width:710rpx;
  box-sizing: border-box;
  padding: 30rpx;
  border-radius:12rpx;
}
.lineOrder{
  width:666rpx;
  border-bottom: 1px solid #F1F1F1;
  margin: 20rpx auto;
}
.active{
  color:rgba(120,201,139,1);
}
.orderNum{
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
}
.orderName{
  font-weight: 600;
  font-size: 28rpx;
  margin-top: 60rpx;
  color: #353535;
}
.orderitem{
  margin-top: 50rpx;
  font-size: 24rpx;
  color: #969696;
  display: flex;
  justify-content: space-between;
}
.closeOrder{
  width: 140rpx;
  height: 60rpx;
  border:1px solid rgba(212,212,212,1);
  background: #fff;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 4rpx;
  margin-right: 16rpx;
}
.btns{
  margin-top: 50rpx;
  display: flex;
  justify-content: flex-end;
}
.joinNum{
  margin: 30rpx auto;
  width: 60rpx;
  height: 60rpx;
  font-size: 26rpx;
  font-weight: 700;
  text-align: center;
  line-height: 60rpx;
  border-radius: 50%;
  border: 1px solid #eee;
}
.showmore{
  width:666rpx;
  height:36rpx;
  background:rgba(246,246,246,1);
  border-radius:18rpx;
  line-height: 36rpx;
  text-align: center;
  margin: 18rpx auto 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:22rpx;
  font-weight:400;
  color:rgba(136,136,136,1);
}
.showmore .img {
  width: 24rpx;
  height: 14rpx;
}
.showmore .shou{
  transform: rotate(180deg);
}
.person{
  width:670rpx;
  min-height:270rpx;
  background:rgba(246,246,246,1);
  border-radius:16rpx;
  margin: 0 auto;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  margin-top: 16rpx;
}
.personItem{
  display: flex;
  width: 100%;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(53,53,53,1);
  justify-content: space-between;
  margin-bottom: 26rpx;
}
.personName{
  display: flex;
  align-items: center;
}
.num{
  display: block;
  width:28rpx;
  height:28rpx;
  border:1px solid rgba(120,201,139,1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:20rpx;
  font-weight:400;
  color:rgba(120,201,139,1);
}
