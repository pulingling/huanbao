/* pages/prize_delivery/prize_delivery.wxss */

.delivery-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx 30rpx 120rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 表单容器 */
.form-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 表单区块 */
.form-section {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.item-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.item-input, .item-textarea {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #fff;
}

.item-textarea {
  height: 160rpx;
  padding: 20rpx 24rpx;
  line-height: 1.6;
}

.remark-textarea {
  height: 200rpx;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 地区选择器 */
.region-picker {
  width: 100%;
}

.picker-view {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: #fff;
  position: relative;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-placeholder {
  font-size: 28rpx;
  color: #999;
}

.picker-arrow {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

/* 提交按钮 */
.submit-btn-container {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 100;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #26A69A, #00BCD4);
  border: none;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(38, 166, 154, 0.3);
}

.submit-btn:disabled {
  background: #ccc;
  box-shadow: none;
}

.submit-btn::after {
  border: none;
}

/* 成功弹窗 */
.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  width: 560rpx;
  box-sizing: border-box;
}

.modal-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #4CAF50;
  color: #fff;
  font-size: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.modal-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  display: block;
  line-height: 1.6;
}

.modal-btn {
  width: 200rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #26A69A, #00BCD4);
  border: none;
  border-radius: 36rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.modal-btn::after {
  border: none;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .delivery-container {
    padding: 16rpx 24rpx 100rpx;
  }
  
  .form-container {
    padding: 0 24rpx;
  }
  
  .submit-btn-container {
    bottom: 30rpx;
    left: 24rpx;
    right: 24rpx;
  }
}