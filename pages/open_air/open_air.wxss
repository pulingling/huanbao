Page {
    background: #F6F6F6;
}

.container {
    width: 100%;
    font-size: 34rpx;
    box-sizing: border-box;
}

.bg {
    width: 750rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.tab1 {
    padding-bottom: 30rpx;
    box-sizing: border-box;
    min-height: 100%;
    margin-top: 10rpx;
}

.tab_container {
    color: #969696;
    background: #FFF;
    font-size: 28rpx;
    line-height: 40rpx;
    height: 100rpx;
    margin-top: 0;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    box-sizing: border-box;
    padding: 26rpx 108rpx 16rpx 108rpx;
}

.tab_container text {
    vertical-align: bottom;
    transition: all .2s ease-out;
}

.tab_container .active {
    color: #6ECE83;
    font-size: 36rpx;
    line-height: 50rpx;
    position: relative;
}

.tab_container .active::after {
    content: " ";
    display: block;
    background: #6ECE83;
    height: 4rpx;
    width: 46rpx;
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto;
}

.item_box {
    position: relative;
    width: 690rpx;
    height: 182rpx;
    margin: 20rpx 30rpx 30rpx 30rpx;
    background: #FFF;
    border-radius: 10rpx;
}

.item_box.top {
    margin-top: 140rpx;
}

.item_box image {
    position: absolute;
    top: 16rpx;
    left: 16rpx;
    width: 146rpx;
    height: 146rpx;
}

.item_box .title {
    width: 416rpx;
    color: #353535;
    font-size: 30rpx;
    line-height: 42rpx;
    position: absolute;
    top: 15rpx;
    left: 209rpx;
    word-break: break-all;
    word-wrap: break-word;
}

.item_box .desc {
    width: 416rpx;
    color: #676666;
    font-size: 24rpx;
    line-height: 30rpx;
    position: absolute;
    top: 110rpx;
    left: 209rpx;
    word-break: break-all;
    word-wrap: break-word;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.tab2 {
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx 30rpx 30rpx;
}

.tab2 .media_box {
    width: 100%;
    border-left: 2rpx #BAD8D6 solid;
    box-sizing: border-box;
    padding-top: 54rpx;
    padding-left: 46rpx;
    position: relative;
}

.tab2 .media_box::before {
    content: " ";
    position: absolute;
    display: block;
    width: 23rpx;
    height: 23rpx;
    background: #6ECE83;
    border-radius: 50%;
    top: 160rpx;
    left: -12rpx;
}

.tab2 .media_box::after {
    content: " ";
    position: absolute;
    display: block;
    width: 36rpx;
    height: 2rpx;
    background: #6ECE83;
    top: 172rpx;
    left: 8rpx;
}

.tab2 .media_box h2 {
    color: #676666;
    font-size: 24rpx;
    line-height: 30rpx;
}

.tab2 .media_card {
    margin-top: 29rpx;
    background: #FFF;
    border-radius: 20rpx;
    width: 100%;
    overflow: hidden;
    padding: 22rpx 20rpx;
    box-sizing: border-box;
}

.tab2 .media_card image {
    height: 190rpx;
}

.tab2 .media_card h1 {
    color: #353535;
    font-size: 30rpx;
    line-height: 42rpx;
    width: 587rpx;
    margin-top: 29rpx;
    margin-left: 22rpx;
}

.tab2 .media_card view {
    color: #969696;
    font-size: 24rpx;
    width: 587rpx;
    line-height: 33rpx;
    margin-top: 30rpx;
    margin-left: 22rpx;
    word-break: break-all;
    word-wrap: break-word;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.docs_box {
    position: relative;
    width: 690rpx;
    margin: 20rpx 30rpx 30rpx 30rpx;
    background: #FFF;
    border-radius: 10rpx;
    padding: 40rpx 0;
}

.docs_box image {
    width: 146rpx;
    height: 146rpx;
    display: inline-block;
    vertical-align: top;
    margin: 0 70rpx 0 30rpx;
}

.docs_box .title {
    width: 416rpx;
    color: #353535;
    font-size: 30rpx;
    line-height: 42rpx;
    word-break: break-all;
    word-wrap: break-word;
    display: inline-block;
}

.tag_box {
    display: flex;
    margin: 20rpx 30rpx 0 30rpx;
    flex-flow: wrap;
    background: #FFF;
    border-radius: 20rpx;
    box-sizing: border-box;
    justify-content: space-around;
    padding-bottom: 45rpx;
}

.tag_item {
    margin: 30rpx 5rpx 0 5rpx;
    padding: 4rpx 20rpx;
}

.tab3 {
    padding-bottom: 30rpx;
    box-sizing: border-box;
    min-height: 100%;
    padding-top: 100rpx;
    position: relative;
}

