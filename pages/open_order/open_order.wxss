Page{
  background: #F6F6F6;
}
.container {
  width: 100%;
  font-size: 34rpx;
  box-sizing: border-box;
}
.hidden{
  height: calc(100vh - 112rpx);
  overflow: hidden;
}
.tabMain{
  width: 100%;
  display: flex;
}
.tab_container {
  color: #969696;
  background: #FFF;
  font-size: 28rpx;
  line-height: 107rpx;
  height: 112rpx;
  margin-top: 0;
  width: 100%;
}
.tabBtn{
  margin-left: 80rpx;
}
.tab_container text {
  vertical-align: bottom;
  transition: all .2s ease-out;
}
.tab_container .active {
  color: #78C98B;
  font-size: 36rpx;
  line-height: 50rpx;
  position: relative;
}
.tab_container .active::after {
  content: " ";
  display: block;
  background:rgba(171,221,183,1);
  border-radius:4rpx;
  height: 6rpx;
  width: 80rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.position{
  width:144rpx;
  height:112rpx;
  background:rgba(255,255,255,1);
  border-right: 2px solid rgba(235,235,235,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.citynow{
  display: block;
  word-break: keep-all;
  font-size: 28rpx;
  overflow: hidden;
}
.arrowBottom{
  width: 18rpx;
  height: 10rpx;
  margin-left: 12rpx;
}
.positionChoose{
  position: fixed;
  top: 112rpx;
  z-index: 1;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.5);
}
.tag_box {
  display: flex;
  flex-flow: wrap;
  background: #FFF;
  box-sizing: border-box;
  justify-content: space-around;
  padding-bottom: 45rpx;
}
.tag_item {
  margin: 28rpx 10rpx 0;
}
.orderList{
  padding-bottom: 60rpx;
}
.tab3 {
  padding-bottom: 30rpx;
  box-sizing: border-box;
  min-height: 100%;
  padding-top: 100rpx;
  position: relative;
}
.bg {
  width: 750rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.docs_box{
  position: relative;
  width: 690rpx;
  margin: 20rpx 30rpx 30rpx 30rpx;
  background: #FFF;
  border-radius: 10rpx;
  padding: 40rpx 0;
}
.docs_box image {
  width: 146rpx;
  height: 146rpx;
  display: inline-block;
  vertical-align: top;
  margin: 0 70rpx 0 30rpx;
}
.docs_box .title{
  width: 416rpx;
  color:#353535;
  font-size: 30rpx;
  line-height: 42rpx;
  word-break: break-all;
  word-wrap: break-word;
  display: inline-block;
}