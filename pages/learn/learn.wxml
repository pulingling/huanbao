<view class='container'>
    <image class="background_img" mode="aspectFit" src="https://sthjxjzx.oss-cn-chengdu.aliyuncs.com/images/onlineStudy/bg.png"></image>
    <view class="avatar_box">
        <view class="avatar">
            <open-data type="userAvatarUrl"/>
        </view>
        <open-data type="userNickName"></open-data>
    </view>
    <view class="card">
        <view class="card_item">
            <view class="tip card_title">已完成课时</view>
            <view class="card_hour">{{learnedCount}}</view>
        </view>
        <view class="card_item">
            <view class="tip card_title">未完成课时</view>
            <view class="card_hour">{{(totalCount - learnedCount || "0")>0?(totalCount - learnedCount || "0"):0}}</view>
        </view>
        <view class="card_item">
            <view class="tip card_title">上次成绩</view>
            <view class="card_point">{{lastScore}}</view>
        </view>
    </view>
    <view class="achieve_bar" bindtap="handleTab">
        <text class="bar_item {{showTab === 1?'active':''}}" data-tab="1">推荐课程</text>
        <text class="bar_item {{showTab === 2?'active':''}}" data-tab="2">已完成课程</text>
        <text class="bar_more" catchtap="toMore">更多 ＞</text>
    </view>
    <list_item option="{{list}}" wx:if="{{list.length}}"></list_item>
    <view wx:else class="none">
        <image src="/images/book.png" mode="aspectFit"></image>
        还没有{{showTab === 1?'待完成':'已完成'}}课程哦～
    </view>
    <view class="more" bindtap="toMore">查看更多课程 ＞</view>
</view>