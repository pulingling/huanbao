Page{
    background: #F6F6F6;
}
.container {
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: flex-start;
    height: auto;
    box-sizing: border-box;
}
.background_img {
    position: absolute;
    top: 0rpx;
    left: 0;
    width: 750rpx;
    height: 497rpx;
    z-index: -1
}
.avatar_box {
    width: 690rpx;
    height: 93rpx;
    margin-top: 23rpx;
    display: flex;
    align-items: center;
}
.avatar {
    width: 93rpx;
    height: 93rpx;
    border-radius: 50%;
    margin-right: 22rpx;
    overflow: hidden;
}
.card {
    width: 690rpx;
    background: #FFF;
    height: 273rpx;
    display: flex;
    align-items: flex-start;
    justify-content: space-around;
    overflow: hidden;
    border-radius: 20rpx;
    margin-top: 30rpx;
    box-sizing: border-box;
}
.card_item {
    width: 200rpx;
    height: 100%;
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: flex-start;
}
.card_hour {
    color: #353535;
    font-size: 50rpx;
    position: relative;
    transform: translateX(-20rpx);
    margin-top: 60rpx;
}
.card_hour::after {
    position: absolute;
    content: "课时";
    top: 13rpx;
    right: -58rpx;
    color: #5A5A5A;
    font-size: 22rpx;
}
.card_point {
    color: #353535;
    font-size: 50rpx;
    position: relative;
    margin-top: 60rpx;
}
.card_point::after {
    position: absolute;
    content: "分";
    top: 13rpx;
    right: -36rpx;
    color: #5A5A5A;
    font-size: 22rpx;
}
.card_title {
    margin-top: 47rpx;
}
.achieve_bar {
    width: 690rpx;
    height: 53rpx;
    margin-top: 50rpx;
    margin-bottom: 20rpx;
    display: flex;
    align-items: flex-end;
}
.bar_item {
    color: #969696;
    font-size: 28rpx;
    transition: all 0.1s;
}
.bar_item:nth-child(2){
    margin-left: 40rpx;
}
.active {
    color: #353535;
    font-size: 38rpx;
    position: relative;
    z-index: 0;
}
.active::after {
    content: "";
    background: #FF9A57;
    width: 128rpx;
    height: 10rpx;
    position: absolute;
    left: 0;
    top: 36rpx;
    z-index: -1;
}
.none {
    color: #969696;
    margin-top: 70rpx;
}
.none image {
    width: 186rpx;
    height: 186rpx;
    margin-bottom: 41rpx;
}
.bar_more {
    color: #969696;
    font-size: 24rpx;
    margin-left: auto;
}
.more {
    color: #6ECE83;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 67rpx;
    margin-bottom: 40rpx;
}