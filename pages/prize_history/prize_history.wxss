/* pages/prize_delivery/prize_delivery.wxss */

.delivery-container {
  min-height: 100vh;
  background: #fce982;
  padding: 20rpx 30rpx 120rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  display: flex;
}
.item-label {
    font-weight: bold;
}
.back-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 表单容器 */
.form-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 0 2rpx rgba(0, 0, 0, 0.1);
}

/* 表单区块 */
.form-section {
  padding: 15rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.item-label {
  font-size: 36rpx;
  color: #000;
  margin-bottom: 16rpx;
  display: block;
}

.item-input, .item-textarea {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #888;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #fff;
}

.item-textarea {
  height: 100rpx;
  padding: 20rpx 24rpx;
  line-height: 1.6;
}
.submit-btn-container button.submit-btn {
    background-color:#ff912f!important;
    font-size: 36rpx;
    color: #fff;
}
.remark-textarea {
  height: 100rpx;
  border: solid 1px #888;
    border-radius: 5px;
    padding: 12px;
    color: #222;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 地区选择器 */
.region-picker {
  width: 100%;
}

.picker-view {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: #fff;
  position: relative;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-placeholder {
  font-size: 28rpx;
  color: #999;
}
.ico-null {
    width: 100px;
    display: inline-block;
    margin: 20rpx 0 40rpx;
}
.a-center {
    text-align: center;
    font-size: 1.2rem;
    color: #563026;
    line-height: 2rem;
}
.picker-arrow {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  margin-top: 32rpx;
  color: #999;
  font-weight: bold;
}
.history text {
    display: block;
    text-indent: 1rem;
}

/* 提交按钮 */
.submit-btn-container {
  margin-top: 30rpx;
  z-index: 100;
}
.form-container {position: relative;}
.ico-bear {
    width: 120px;
    position:absolute;
    right: -28rpx;
    top:-50rpx;
}
.name {font-weight: bold;}
.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #26A69A, #00BCD4);
  border: none;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(38, 166, 154, 0.3);
}

.submit-btn:disabled {
  background: #ccc;
  box-shadow: none;
}

.submit-btn::after {
  border: none;
}

/* 成功弹窗 */
.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  width: 560rpx;
  box-sizing: border-box;
}

.modal-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #4CAF50;
  color: #fff;
  font-size: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.modal-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  display: block;
  line-height: 1.6;
}

.modal-btn {
  width: 200rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #26A69A, #00BCD4);
  border: none;
  border-radius: 36rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.modal-btn::after {
  border: none;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .delivery-container {
    padding: 16rpx 24rpx 100rpx;
  }
  
  .form-container {
    padding: 0 24rpx;
  }
  
  .submit-btn-container {
    bottom: 30rpx;
    left: 24rpx;
    right: 24rpx;
  }
}

.no-prize {
  padding: 200rpx 0;
  text-align: center;
  color: #666;
}

.prize-list {

}

.prize-list .item {
  padding: 10rpx 0;
  border-bottom: 1px solid rgb(243, 242, 242);
}
.prize-list .item:last-child {
  border-bottom: 0 none;
}
.prize-list .item .title {
  display: flex;
  font-size: 30rpx;
  color: #b6b6b6;
  justify-content: space-between;
}
.prize-list .item .st {
  color: rgb(73, 73, 73); margin-right: 40rpx;
}
.prize-list .item .st1 {
  color: rgb(20, 201, 20);
}
.prize-list .item .p {
  font-size: 28rpx;
  padding-top: 6rpx;
}
.prize-list .item .name {
  padding-top: 8rpx;
  /* font-size: 28rpx; */
}
.prize-list .item .p .label {
  color: #b6b6b6;
}
.prize-list .item .link {
  display: inline;
  color: #4CAF50;
  text-decoration: underline;
}