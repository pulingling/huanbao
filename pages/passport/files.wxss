    font-weight: 400;
    color: #6BBB7E;
    line-height: 56rpx;
    text-align: center;


    left: 591rpx;
}

.preview {
    width: 128rpx;
    height: 56rpx;
    background: linear-gradient(180deg, #74BE7E 0%, #5DB881 100%);
