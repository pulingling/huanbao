.name {
    font-size: 34rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #313131;
    line-height: 48rpx;
    padding: 20rpx;
    display: block;
    text-align: center;
}

.attachList {
    margin: 0 auto;
}

.attachDetail {
    display: flex;
