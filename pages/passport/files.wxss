    padding: 20rpx 40rpx 10rpx 40rpx;
}

.geshi {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    width: 380rpx;
    height: 56rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #A6A6A6;
