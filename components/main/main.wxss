  height: 28rpx;
  margin: 0 24rpx 0 21rpx;
}
.section_knowledge .knowledge_item {
  font-size: 28rpx;
  color: #353535;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: rgba(0, 0, 0, 0.1) solid 1px;
  height: 90rpx;
}
.section_knowledge .knowledge_item {
  font-size: 22rpx;
  color: #353535;
  margin-left: auto;
  margin-right: 38rpx;
}
.more {
  color: #353535;
  font-size: 24rpx;
  font-weight: bold;
}
.knowledge_more {
  position: absolute;
  bottom: 41rpx;
  left: 29rpx;
}
.knowledge_bg {
  z-index: -1;
  position: absolute;
  top: 0;
  left: 0;
  width: 690rpx;
  height: 382rpx;
}
.indication {
  position: absolute;
  width: 100%;
  bottom: 16rpx;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 300rpx;
}
.dots {
  width: 16rpx;
  height: 5rpx;
  border-radius: 4rpx;
  background: #FFF;
  opacity: 0.5;
  transition: opacity 0.3s ease;
}
.dots_active {
  width: 25rpx;
  height: 7rpx;
  opacity: 1;
  border-radius: 4rpx;
  background: #FFF;
}
.tempbutton {
  width: 330rpx;
  height: 110rpx;
}
.tempbutton image {
  width: 100%;
  height: 100%;
}
.scan {
  height: 80rpx;
  width: 100%;
  background-image: linear-gradient(to right, #1AD589FF, #50EA9FFF);
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  cursor: pointer;
}
.scan.small {
  height: 110rpx;
  line-height: 110rpx;
  width: 330rpx;
  margin-top: 0;
}
.scanqr {
  color: #fff;
  font-size: 30rpx;
}
