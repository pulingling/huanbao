.points-card {
  width: calc(50% - 10rpx);
  height: 180rpx;
  background: #1ddab5ff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0 12rpx 32rpx rgba(144, 238, 144, 0.4), 
              0 4rpx 16rpx rgba(144, 238, 144, 0.2);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateY(0);
}

.points-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3), 
              0 2rpx 12rpx rgba(102, 126, 234, 0.15);
}

.points-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -30rpx;
  width: 120rpx;
  height: 240rpx;
  background: linear-gradient(45deg, 
    rgba(255, 255, 255, 0.15) 0%, 
    rgba(255, 255, 255, 0.05) 50%, 
    transparent 100%);
  border-radius: 50%;
  transform: rotate(25deg);
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { opacity: 0.3; transform: rotate(25deg) translateX(0); }
  50% { opacity: 0.6; transform: rotate(25deg) translateX(10rpx); }
}

.points-card::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: -20rpx;
  width: 80rpx;
  height: 80rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
