.container {
    width: 100%;
    height: auto;
    display: flex;
    flex-flow: wrap;
    align-items: center;
    justify-content: space-around;
    font-size: 34rpx;
    box-sizing: border-box;
    padding: 50rpx 10rpx 0 10rpx;
    margin-top: 60rpx;
}
.base_item {
    width: 690rpx;
    height: 276rpx;
    margin: 30rpx 0;
    box-sizing: border-box;
    background: #FFF;
    position: relative;
    border-radius: 10rpx;
}
.base_item .base_img {
    width: 222rpx;
    height: 222rpx;
    position: absolute;
    top: 25rpx;
    left: 25rpx;
}
.base_item .base_h1 {
    font-size: 30rpx;
    font-weight: 400;
    color: #353535;
    line-height: 42rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
    position: absolute;
    top: 44rpx;
    left: 271rpx;
}
.base_item .base_text {
    font-size:24rpx;
    line-height:33rpx;
    color:#969696;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    position: absolute;
    top: 127rpx;
    left: 271rpx;
}