.orderCard {
    width: 710rpx;
    margin: 40rpx auto 0;
    text-align: center;
    font-weight: 500;
}

.Card {
    width: 100%;
    border-radius: 20rpx;
    background: #fff;
    margin-top: 20rpx;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 7px 10px 0px;
    position: relative;
}

.Card .img {
    width: 100%;
    height: 300rpx;
    border-radius: 20rpx 20rpx 0 0;
}

.cardInfo {
    width: 100%;
    border-radius: 0 0 20rpx 20rpx;
    padding-bottom: 28rpx;
}

.cardName {
    width: 100%;
    margin: 20rpx auto 0;
    display: flex;
    flex-direction: column;
    font-size: 34rpx;
    font-weight: 600;
    justify-content: space-between;
}

.name {
    width: 400rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-align: left;
    margin-left: 22rpx;
}

.nameBox {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.synopsis {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-align: left;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(136, 136, 136, 1);
    text-align: left;
    box-sizing: border-box;
    padding: 0 22rpx;
    margin-top: 18rpx;
}

.imgStyle{
    height: 452rpx;
    overflow: hidden;
}