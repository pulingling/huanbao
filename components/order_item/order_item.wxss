.orderCard{
  width: 710rpx;
  margin: 40rpx auto 0;
  text-align: center;
  font-weight: 500;
}
.visitTime{
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(178,178,178,1);
}
.Card{
  width: 100%;
  border-radius: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  box-shadow: rgba(0, 0, 0, 0.1) 0px 7px 10px 0px;
  position: relative;
}
.heartBox{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  border-radius: 50%;
  top: 18rpx;
  right: 20rpx;
}
.heartBox .heart{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.Card .img{
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.cardInfo{
  width: 100%;
  border-radius: 0 0 20rpx 20rpx;
  padding-bottom: 28rpx;
}
.cardName{
  width: 100%;
  margin: 20rpx auto 0;
  display: flex;
  flex-direction: column;
  font-size: 34rpx;
  font-weight: 600;
  justify-content: space-between;
}
.name{
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: left;
  margin-left: 22rpx;
}
.nameBox{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.synopsis{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: left;
  font-size:28rpx;
  font-weight:400;
  color:rgba(136,136,136,1);
  text-align: left;
  box-sizing: border-box;
  padding: 0 22rpx;
  margin-top: 18rpx;
}
.location{
  display: flex;
  width: 100;
  margin: 0 22rpx;
  align-items: center;
}
.locationInfo{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.locationInfo text{
  width: 600rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size:26rpx;
  font-weight:400;
  color:rgba(178,178,178,1);
  text-align: left;
  margin-left: 6rpx;
  line-height: 40rpx;
  margin-top: 4rpx;
}
.locImg{
  width: 28rpx;
  height: 32rpx;
}
.toOrder{
  width:176rpx;
  height:60rpx;
  background:rgba(120,201,139,1);
  border-radius:12rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight:400;
  margin-right: 12rpx;
}
.disable{
  background:#969696;
}
.facility{
  font-size: 30rpx;
  color: #353535;
  text-align: left;
  padding: 20rpx 10rpx 0 20rpx;
  margin: 20rpx 20rpx 0 20rpx;
  border-top: 1px solid #DBDBDB;
}
.facility > label {
  float: right;
}