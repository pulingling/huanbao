.container {
    width: 100%;
    height: auto;
    display: flex;
    flex-flow: wrap;
    align-items: center;
    justify-content: space-around;
    font-size: 34rpx;
    box-sizing: border-box;
    padding: 60rpx 10rpx 0 10rpx;
    margin-top: 80rpx;
}
.base_item {
    width: 330rpx;
    height: 476rpx;
    box-sizing: border-box;
    padding: 18rpx;
    background: #FFF;
    margin-bottom: 36rpx;
    border-radius: 10rpx;
}
.base_item .base_img {
    width: 293rpx;
    height: 258rpx;
    margin-bottom: 20rpx;
}
.base_item .base_h1 {
    font-size: 30rpx;
    font-weight: 400;
    color: #3B3B3B;
    line-height: 42rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.base_item .base_text {
    font-size:22rpx;
    line-height:30rpx;
    color:rgba(150,150,150,1);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}