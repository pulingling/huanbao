.container {
    width: 100%;
    font-size: 34rpx;
    box-sizing: border-box;
    margin-top: 82rpx;
}

.tab1 {
    padding-bottom: 30rpx;
    box-sizing: border-box;
    min-height: 100%;
    margin-top: 10rpx;
}
.tab_container {
    color: #969696;
    background: #FFF;
    font-size: 28rpx;
    line-height: 40rpx;
    height: 50rpx;
    margin-top: 26rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    box-sizing: border-box;
    padding: 0 108rpx;
}
/* .tab_container text {
    vertical-align: bottom;
} */
.tab_container .active {
    color: #6ECE83;
    font-size: 36rpx;
    line-height: 50rpx;
    position: relative;
}
.tab_container .active::after {
    content: " ";
    display: block;
    background: #6ECE83;
    height: 4rpx;
    width: 46rpx;
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto;
}
.item_box {
    position: relative;
    width: 690rpx;
    height: 182rpx;
    margin: 20rpx 30rpx 30rpx 30rpx;
    background: #FFF;
    border-radius: 10rpx;
}
.item_box.top{
    margin-top: 140rpx;
}
.item_box .image {
    position: absolute;
    top: 16rpx;
    left: 16rpx;
    width: 146rpx;
    height: 146rpx;
}
.item_box .title {
    width: 416rpx;
    color:#353535;
    font-size: 30rpx;
    line-height: 42rpx;
    position: absolute;
    top: 15rpx;
    left: 209rpx;
    word-break: break-all;
    word-wrap: break-word;
}
.item_box .desc {
    width: 416rpx;
    color:#676666;
    font-size: 24rpx;
    line-height: 30rpx;
    position: absolute;
    top: 110rpx;
    left: 209rpx;
    word-break: break-all;
    word-wrap: break-word;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.tag_box {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-evenly;
    margin: 0 30rpx 15rpx 30rpx;
    border-radius: 20rpx;
    background: #FFF;
    box-shadow: 0 5rpx 20rpx 0 #D2E2D580;
}
.tag_item {
    margin: 15rpx 10rpx;
}
.tab3 {
    padding-bottom: 30rpx;
    box-sizing: border-box;
    min-height: 100%;
    margin-top: 10rpx;
    padding-top: 130rpx;
}
.footer {
    color:#676666;
    text-align: center;
    width: 100%;
    margin-top: 70rpx;
}