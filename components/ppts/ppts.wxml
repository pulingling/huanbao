<view class="container">
    <view class="tab1">
        <view class="tag_box">
            <block wx:for="{{tags}}" wx:key="key" wx:for-index="key"  wx:for-item="value">
                <tag class="tag_item" active="{{actCate === key-0}}" data-cate="{{key}}" bindtap="handleTag">{{value}}</tag>
            </block>
        </view>
        <view class="item_box" wx:for="{{list}}" wx:for-item="item" wx:key="id" bindtap="handleOpenDetail"  data-type="1"  data-id="{{item.id}}">
            <image data-id="{{item.id}}" class="image" binderror="useDefault" src="{{item.s_image}}" mode="aspectFill"></image>
            <view class="title">{{item.title}}</view>
            <view class="desc">{{item.description}}</view>
        </view>
        <view class="footer">
            {{enough?"已无更多":"加载中..."}}
        </view>
    </view>
</view>
